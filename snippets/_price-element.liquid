{% if product.available %}
  <div class="price__element px-2 pb-2 text-gray-600 {{ class }}">
    {% if product.compare_at_price > product.price %}
      <div class="pride__element-sale">
        <span class="sr-only">{{ 'products.product.price.sale_price' | t }}</span>
        {{ product.price | money }}
        <s class="text-red-700">{{ product.compare_at_price | money }}</s>
      </div>
    {% elsif product.price_varies %}
      <div class="price__element-varies">From {{ product.price_min | money }} to {{ product.price_max }}</div>
    {% else %}
      <span class="sr-only">{{ 'products.product.price.regular_price' | t }}</span>
      {{ product.price | money }}
    {% endif %}
  </div>
{% endif %}
